# OHS Project 3: Heat Stress Anomaly Detection
# ---------------------------------------------
# Detect potential overexposure or physiological stress from IoT sensor data.

import pandas as pd
from sklearn.ensemble import IsolationForest
import matplotlib.pyplot as plt

# STEP 1: Load data
data = pd.read_csv("sample_data/heat_stress_data.csv")
print("Data preview:", data.head())

# STEP 2: Select relevant features
features = data[["temperature", "humidity", "heart_rate"]]

# STEP 3: Train anomaly detection model
model = IsolationForest(contamination=0.2, random_state=42)
data["anomaly"] = model.fit_predict(features)

# STEP 4: Visualize anomalies
plt.scatter(data["temperature"], data["heart_rate"], c=data["anomaly"], cmap="coolwarm")
plt.xlabel("Temperature (Â°C)")
plt.ylabel("Heart Rate (bpm)")
plt.title("Heat Stress Anomaly Detection")
plt.show()
